{
  "name": "Solace",
  "version": "0.0.1",
  "manifest_version": 2,
  "author": "Winston Wang, Jenny Chan, Jimmy Wang, Anuj Shah",
  "description": "The power of Watson in your hand",
  "icons": {
    "16": "icons/solace.png",
    "48": "icons/solace.png",
    "128": "icons/solace.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js",
      "lib/jquery-3.1.1.min.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/solace.png",
    "default_title": "Solace",
    "default_popup": "src/browser_action/popup.html"
  },
  "permissions": [
    "contextMenus",
    "notifications",
    "geolocation",
    "<all_urls>",
    "storage",
    "https://solace-admin.herokuapp.com/api/tokens/sessions/create"
  ]
}
